<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/element_vertical_margin"
    tools:context=".gui.BodyInputPickerFragment">

    <!-- Body Weight Input -->
    <TextView
        android:id="@+id/dialog_input_label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/dialog_input_label_name" />

    <de.busse_apps.bakcalculator.widget.ClearableEditText
        android:id="@+id/dialog_input_field_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_input_label_name"
        android:drawableEnd="@drawable/ic_action_remove"
        android:drawableRight="@drawable/ic_action_remove"
        android:ems="10"
        android:hint="@string/dialog_input_hint_name"
        android:inputType="text" />

</RelativeLayout>
