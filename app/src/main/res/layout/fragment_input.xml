<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Main Header -->
            <TextView
                android:id="@+id/input_label_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/input_label_header"
                android:textAppearance="@style/TextAppearance.Large" />

            <ImageView
                android:id="@+id/input_divider_header"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/input_label_header"
                android:contentDescription="@string/input_divider_desc"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_textfield" />

            <!-- Body Weight Input -->
            <TextView
                android:id="@+id/input_label_body_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_divider_header"
                android:layout_marginTop="@dimen/element_vertical_margin"
                android:text="@string/input_label_body_weight" />

            <de.busse_apps.bakcalculator.widget.ClearableEditText
                android:id="@+id/input_field_body_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_label_body_weight"
                android:drawableEnd="@drawable/ic_action_remove"
                android:drawableRight="@drawable/ic_action_remove"
                android:ems="10"
                android:hint="@string/input_hint_body_weight"
                android:inputType="numberDecimal" />

            <!-- Body Height Input -->
            <TextView
                android:id="@+id/input_label_body_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_field_body_weight"
                android:layout_marginTop="@dimen/element_vertical_margin"
                android:text="@string/input_label_body_height" />

            <de.busse_apps.bakcalculator.widget.ClearableEditText
                android:id="@+id/input_field_body_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_label_body_height"
                android:drawableEnd="@drawable/ic_action_remove"
                android:drawableRight="@drawable/ic_action_remove"
                android:ems="10"
                android:hint="@string/input_hint_body_height"
                android:inputType="numberDecimal" />

            <!-- Age Input -->
            <TextView
                android:id="@+id/input_label_body_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_field_body_height"
                android:layout_marginTop="@dimen/element_vertical_margin"
                android:text="@string/input_label_body_age" />

            <de.busse_apps.bakcalculator.widget.ClearableEditText
                android:id="@+id/input_field_body_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_label_body_age"
                android:drawableEnd="@drawable/ic_action_remove"
                android:drawableRight="@drawable/ic_action_remove"
                android:ems="10"
                android:hint="@string/input_hint_body_age"
                android:inputType="numberDecimal" />

            <!-- Sex Spinner -->
            <TextView
                android:id="@+id/input_label_body_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_field_body_age"
                android:layout_marginTop="@dimen/element_vertical_margin"
                android:text="@string/input_label_body_sex" />

            <Spinner
                android:id="@+id/input_spinner_body_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_label_body_sex"
                tools:listitem="@android:layout/simple_spinner_item" />


            <!-- Drink Volume Input -->
            <TextView
                android:id="@+id/input_label_drink_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_spinner_body_sex"
                android:layout_marginTop="@dimen/element_vertical_margin"
                android:text="@string/input_label_drink_volume" />

            <de.busse_apps.bakcalculator.widget.ClearableEditText
                android:id="@+id/input_field_drink_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_label_drink_volume"
                android:drawableEnd="@drawable/ic_action_remove"
                android:drawableRight="@drawable/ic_action_remove"
                android:ems="10"
                android:hint="@string/input_hint_drink_volume"
                android:inputType="numberDecimal" />

            <!-- Drink Percent Input -->
            <TextView
                android:id="@+id/input_label_drink_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_field_drink_volume"
                android:layout_marginTop="@dimen/element_vertical_margin"
                android:text="@string/input_label_drink_percent" />

            <de.busse_apps.bakcalculator.widget.ClearableEditText
                android:id="@+id/input_field_drink_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_label_drink_percent"
                android:drawableEnd="@drawable/ic_action_remove"
                android:drawableRight="@drawable/ic_action_remove"
                android:ems="10"
                android:hint="@string/input_hint_drink_percent"
                android:inputType="numberDecimal" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/input_button_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/input_button_calculate" />

</LinearLayout>
